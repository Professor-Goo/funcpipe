# API Configuration
API_TITLE=FuncPipe API
API_VERSION=1.0.0
API_DESCRIPTION=Functional Data Processing Pipeline API
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Storage Configuration
UPLOAD_DIR=storage/uploads
RESULT_DIR=storage/results
TEMP_DIR=storage/temp
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=.csv,.json,.tsv,.txt

# File Retention
RESULT_RETENTION_HOURS=24
TEMP_FILE_CLEANUP_HOURS=1

# Database Configuration (SQLite for MVP, PostgreSQL for production)
DATABASE_URL=sqlite:///./storage/funcpipe.db
# DATABASE_URL=postgresql://user:password@localhost/funcpipe

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Background Tasks (Phase 2)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring (Phase 3)
